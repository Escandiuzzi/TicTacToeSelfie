<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:columnCount="3"
    android:layout_row="4"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_rowSpan="3"
        android:layout_columnSpan="3"
        android:gravity="top"
        android:orientation="vertical"
        android:layout_marginBottom="120dp">

        <TextView
            android:id="@+id/tvText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="TIC-TAC-TOE"
            android:textSize="30dp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:textAlignment="center"
            android:layout_margin="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/ibTile00"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/border"

                android:layout_margin="5dp"
                android:src="@drawable/androidstudio_icon"/>

            <ImageButton
                android:id="@+id/ibTile01"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:layout_margin="5dp"
                android:src="@drawable/androidstudio_icon"/>

            <ImageButton
                android:id="@+id/ibTile02"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/border"
                android:src="@drawable/androidstudio_icon"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ibTile10"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/border"
                android:src="@drawable/androidstudio_icon"/>

            <ImageButton
                android:id="@+id/ibTile11"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/border"
                android:src="@drawable/androidstudio_icon"/>

            <ImageButton
                android:id="@+id/ibTile12"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/border"
                android:src="@drawable/androidstudio_icon"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ibTile20"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/border"
                    android:src="@drawable/androidstudio_icon"/>

                <ImageButton
                    android:id="@+id/ibTile21"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/border"
                    android:src="@drawable/androidstudio_icon"/>

                <ImageButton
                    android:id="@+id/ibTile22"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"

                    android:layout_margin="5dp"
                    android:background="@drawable/border"
                    android:src="@drawable/androidstudio_icon"/>

            </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:gravity="bottom">

        <ImageButton
            android:id="@+id/ibPlayer1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:src="@drawable/androidstudio_icon"/>

        <ImageButton
            android:id="@+id/ibPlayer2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:src="@drawable/androidstudio_icon"/>

        <Button
            android:id="@+id/btnClear"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:text="C"

            android:layout_margin="2dp"
            android:textSize="50sp"
            android:textStyle="bold"/>

    </LinearLayout>


</GridLayout>